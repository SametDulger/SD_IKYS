@model SD_IKYS.Web.Models.RoleViewModel

@{
    ViewData["Title"] = "Rol Sil";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    Rol Silme Onayı
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i>
                        Dikkat!
                    </h5>
                    <p class="mb-0">Bu rolü silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Rol Adı:</dt>
                    <dd class="col-sm-8">
                        <strong class="text-danger">@Model.Name</strong>
                    </dd>

                    <dt class="col-sm-4">Açıklama:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Oluşturulma:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Evet, Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 