@model IEnumerable<SD_IKYS.Web.Models.RoleViewModel>

@{
    ViewData["Title"] = "Roller";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>
        <i class="fas fa-user-tag text-primary"></i>
        Roller
    </h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Rol
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td>@item.Description</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-user-tag fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz rol bulunmuyor</h5>
                <p class="text-muted">İlk rolü oluşturmak için yukarıdaki butonu kullanın.</p>
            </div>
        }
    </div>
</div> 