<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SD_IKYS.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SD_IKYS.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SD_IKYS.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Kullanıcı Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Kullanıcılar</a></li>
                                <li><a class="dropdown-item" asp-controller="Roles" asp-action="Index">Roller</a></li>
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Login">Giriş</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="employeeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Personel Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="employeeDropdown">
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">Personel Listesi</a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Create">Yeni Personel</a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Active">Aktif Personel</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="leaveDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                İzin Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="leaveDropdown">
                                <li><a class="dropdown-item" asp-controller="LeaveRequests" asp-action="Index">İzin Talepleri</a></li>
                                <li><a class="dropdown-item" asp-controller="LeaveRequests" asp-action="Create">Yeni İzin Talebi</a></li>
                                <li><a class="dropdown-item" asp-controller="LeaveRequests" asp-action="Pending">Bekleyen Talepler</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="performanceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Performans Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="performanceDropdown">
                                <li><a class="dropdown-item" asp-controller="PerformanceEvaluations" asp-action="Index">Performans Değerlendirmeleri</a></li>
                                <li><a class="dropdown-item" asp-controller="PerformanceEvaluations" asp-action="Create">Yeni Değerlendirme</a></li>
                                <li><a class="dropdown-item" asp-controller="PerformanceEvaluations" asp-action="HighPerformers">Yüksek Performanslılar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="trainingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Eğitim Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="trainingDropdown">
                                <li><a class="dropdown-item" asp-controller="Trainings" asp-action="Index">Eğitimler</a></li>
                                <li><a class="dropdown-item" asp-controller="Trainings" asp-action="Create">Yeni Eğitim</a></li>
                                <li><a class="dropdown-item" asp-controller="TrainingParticipants" asp-action="Index">Katılımcılar</a></li>
                                <li><a class="dropdown-item" asp-controller="TrainingParticipants" asp-action="Create">Katılımcı Ekle</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Logout">Çıkış</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Giriş</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SD_IKYS.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
