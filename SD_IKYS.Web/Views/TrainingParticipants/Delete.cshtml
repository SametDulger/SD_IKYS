@model SD_IKYS.Web.Models.TrainingParticipantViewModel

@{
    ViewData["Title"] = "Katılımcı Sil";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Katılımcı Sil</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading">Dikkat!</h4>
    <p>Bu katılımcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Katılımcı Bilgileri</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                    <dt class="col-sm-4">Eğitim:</dt>
                    <dd class="col-sm-8">@Model.TrainingTitle</dd>
                    <dt class="col-sm-4">Personel:</dt>
                    <dd class="col-sm-8">@Model.EmployeeName</dd>
                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Puan:</dt>
                    <dd class="col-sm-8">@Model.Score</dd>
                    <dt class="col-sm-4">Tamamlanma Tarihi:</dt>
                    <dd class="col-sm-8">@(Model.CompletionDate?.ToShortDateString() ?? "-")</dd>
                    <dt class="col-sm-4">Sertifika No:</dt>
                    <dd class="col-sm-8">@Model.CertificateNumber</dd>
                    <dt class="col-sm-4">Notlar:</dt>
                    <dd class="col-sm-8">@Model.Notes</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<form asp-action="Delete" method="post">
    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-times"></i> İptal
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Sil
        </button>
    </div>
</form> 