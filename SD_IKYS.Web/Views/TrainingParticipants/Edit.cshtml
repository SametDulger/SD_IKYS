@model SD_IKYS.Web.Models.TrainingParticipantEditViewModel

@{
    ViewData["Title"] = "Katılımcı Düzenle";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Katılımcı Düzenle</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TrainingId" class="form-label">Eğitim *</label>
                        <select asp-for="TrainingId" class="form-select">
                            <option value="">Eğitim Seçiniz</option>
                        </select>
                        <span asp-validation-for="TrainingId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label">Personel *</label>
                        <select asp-for="EmployeeId" class="form-select">
                            <option value="">Personel Seçiniz</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Durum</label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Score" class="form-label">Puan</label>
                        <input asp-for="Score" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CompletionDate" class="form-label">Tamamlanma Tarihi</label>
                        <input asp-for="CompletionDate" type="date" class="form-control" />
                        <span asp-validation-for="CompletionDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CertificateNumber" class="form-label">Sertifika No</label>
                        <input asp-for="CertificateNumber" class="form-control" />
                        <span asp-validation-for="CertificateNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notlar</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 