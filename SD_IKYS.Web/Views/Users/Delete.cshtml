@model SD_IKYS.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kullanıcı Sil</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading">Dikkat!</h4>
    <p>Bu kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Kullanıcı Bilgileri</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Kullanıcı Adı:</dt>
                    <dd class="col-sm-8">@Model.Username</dd>

                    <dt class="col-sm-4">Ad:</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Soyad:</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">E-posta:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Telefon:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Rol:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.RoleName))
                        {
                            <span class="badge bg-info">@Model.RoleName</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Rol Yok</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-times"></i> İptal
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Sil
        </button>
    </div>
</form> 